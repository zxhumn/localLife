/* components/shop/shop.wxss */
.cell {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  position: relative;
}

.cell .imageView {
  margin: 20rpx;
  min-width: 160rpx;
  height: 160rpx;
}

.imageView image {
  width: 100%;
  height: 100%;
}

.cell .meta {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  /* justify-content: center; */
  padding: 10rpx 0rpx;
  flex: 1;
  color: #678;
}

.cell .meta .name {
  font-size: 30rpx;
  color: #234;
}

.cell .meta .time {
  font-size: 24rpx;
}

.score {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 24rpx;
  background-color: #ee523d;
  color: white;
  padding: 0rpx 10rpx;
  border-radius: 30rpx;
  text-align: center;
}